<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %></title>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta name="keywords" content="<%= @seo_keywords %>"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
  <%= stylesheet_link_tag 'portfolio', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= render 'shared/portfolio_nav' %>

  <%= render 'shared/portfolio_header' unless %w(new edit).include?(params[:action]) %>

  <%= yield %>

  <%= render 'shared/portfolio_footer' %>

  <% if session[:source] %>
      <p>Thank for visiting me from <%= session[:source] %></p>
  <% end %>
</body>
</html>
