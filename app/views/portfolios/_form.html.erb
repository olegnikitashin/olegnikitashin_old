<%= simple_form_for(@portfolio_item, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :body %>
    <h3>Technologies:</h3>
    <ul>
      <%= f.simple_fields_for :technologies do |t| %>
        <li>
          <%= t.input :name %>
        </li>
      <% end %>
    </ul>
    <%= f.button :submit %>
<% end %>