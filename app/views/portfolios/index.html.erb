<h1>Portfolio Items</h1>
<%= link_to 'New Portfolio Item', new_portfolio_path %>
<br>
<% @portfolio_items.each do |portfolio_item| %>
  <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
  <p><%= portfolio_item.title %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image %>
  <br>
  <%= link_to 'Edit Portfolio Item', edit_portfolio_path(portfolio_item) %>
  <%= link_to 'Destroy Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
  <hr>
<% end %>