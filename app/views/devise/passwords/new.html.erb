<div class="login">
  <div class="card">
    <div class="card-block">
      <h2>Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-warning btn-block' %>
            <%= link_to 'Log In', new_user_session_path, class: 'btn btn-success btn-block' %>
            <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-block' %>
          </div>
      <% end %>
    </div>
  </div>
</div>