<%= simple_form_for(blog) do |f| %>
    <% if blog.errors.any? %>
        <%= errors_to_flash(blog) %>
    <% end %>
    <%= f.input :title, placeholder: 'Title' %>

    <%= f.input :topic_id, collection: Topic.all, label_method: :title %>

    <%= f.input :status, collection: Blog.statuses, as: :radio_buttons, value_method: :first, label: false %>

    <%= f.input :body, as: :text, input_html: { rows: 15, placeholder: 'Body' } %>

    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

